{%
  set classes = [
    node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

{% set category = content.field_category.0|render|striptags %}
{% if content.field_iframe_link.0 %}
  {% set google_map = "https://maps.google.com/maps?q=" ~ content.field_iframe_link.0|render|striptags|url_encode ~ "%2C&t=&z=11&ie=UTF8&iwloc=&output=embed"  %}
  {# {% set google_map = content.field_iframe_link.0 %} #}
{% else %}
  {% set google_map = "https://maps.google.com/maps?q=Dauin%2C&t=&z=11&ie=UTF8&iwloc=&output=embed" %}
{% endif %}

{% if content.field_website_link.0 %}
  {% set page_link = content.field_website_link.0 %}
{% else %}
  {% set page_link = "https://www.facebook.com/pahimuKo" %}
{% endif %}

<div class="text-center banner"  style="
        height: 50vh;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        background-image:  url({{ content.field_place_image_thumbnail.0 }} );
        background-attachment: fixed;
        ">

  <div class="gradient"></div>
    <div class="container">
       <div class="row">
           <div class="col-md-12">
                <h1 data-aos="fade-left" data-aos-easing="linear" data-aos-duration="800">{{ label }}</h1>
           </div>
       </div>
  </div>
</div>
<article{{ attributes.addClass(classes) }}>
    <section class="detail-first">
      <div class="row">
          <div class="col-md-6">
            <iframe id="gmap_canvas" src={{google_map}} frameborder="0" scrolling="yes" marginheight="0" marginwidth="0">
            </iframe>
          </div>
          <div class="col-md-6">
            <div class="detail-first-text">
              <h2>Please Support Us</h2>
              <h5>Web Design </h5>
              <a href="https://www.facebook.com/pahimuKo/" class="btn btn-success">Contact us</a>
            </div>
          </div>
      </div>

    </section>
    <!-- End reviews Area -->

    <!-- Specialities Section Start -->
    <section class="specialities">

      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-5 paragraph">
            <h3>Summary</h3>
            <p>{{content.field_places_details}}</p>
            <a href={{page_link}} class="btn btn-success">Visit Us</a>
          </div>

        {% if category == "Tourist Spots" %}
          <div class="col-xs-12 col-sm-6 col-md-7 inner-content">
             <div class="part">
              <h2>Ratings</h2>
              <h4>From the Customers</h4>
              <hr>
                 <div class="specialitie">
                   <h3 ><a><i class="fa fa-money" aria-hidden="true"></i>Accomodation</a><span><h6>{{ content.field_star_rating_accomodation.0.vote.vote['#rating'] }}%</h6></span></h3>
                   <div class="progress">
                      <div class="progress-bar" data-aos="fade-right" data-aos-duration="1000" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:{{content.field_star_rating_accomodation.0.vote.vote['#rating']}}%">
                      </div>
                   </div>
                   <div class="star-rating-vote">
                     {{ content.field_star_rating_accomodation }}
                   </div>
                </div>
                 <div class="specialitie">
                   <h3 ><a><i class="fa fa-plane" aria-hidden="true"></i>Food</a><span><h6>{{content.field_star_rating_food.0.vote.vote['#rating']}}%</h6></span></h3>
                   <div class="progress">
                      <div class="progress-bar" data-aos="fade-right" data-aos-duration="1000" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:{{content.field_star_rating_food.0.vote.vote['#rating']}}%">
                      </div>
                   </div>
                   <div class="star-rating-vote">
                     {{ content.field_star_rating_food }}
                   </div>
                </div>
                 <div class="specialitie">
                   <h3 ><a><i class="fa fa-cutlery" aria-hidden="true"></i>Experience</a><span><h6>{{content.field_star_rating_experience.0.vote.vote['#rating']}}%</h6></span></h3>
                   <div class="progress">
                      <div class="progress-bar" data-aos="fade-right" data-aos-duration="1000" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width:{{content.field_star_rating_experience.0.vote.vote['#rating']}}%">
                      </div>
                   </div>
                   <div class="star-rating-vote">
                     {{ content.field_star_rating_experience }}
                   </div>
                </div>
                <div class="specialitie fb-login-button">
                  <h6>Please : </h6>
                  <div class="fb-login-button" data-size="medium" data-button-type="continue_with" data-layout="rounded" data-auto-logout-link="false" data-use-continue-as="true" data-width=""></div>
                  <h6> to Rate</h6>
                </div>
          </div>
        </div>
        {% elseif category == "Schools"%}
            <div class="col-xs-12 col-sm-6 col-md-7 inner-content">
                <div class="part">
                  <div class="carousel slide" id="div-image"  data-ride="carousel" data-interval="4000">
                    <div class="carousel-inner" >
                       {{ content.field_place_image_thumbnail }}
                    </div>
                    <a class="carousel-control-prev" href="#div-image" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#div-image" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                  </div>
                </div>
              </div>
        {% endif %}
      </div>
      {% if category == "Tourist Spots" %}
        <div class="row">
            <div class="container">
              <div class="carousel slide" id="div-image"  data-ride="carousel" data-interval="4000">
                <div class="carousel-inner" >
                   {{ content.field_place_image_thumbnail }}
                </div>
              </div>
            </div>
        </div>
      {% endif %}
      <div class="row card-row">
        <div class="container">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col">
            <h5><b>Nearby Place</b></h5>
                {{ content.field_views_nearby_places }}
          </div>
        </div>
      </div>
      <div class="row">
           <div class="fb-like col-md-3" data-href="https://dev-deped-dauin.pantheonsite.io{{url}}" data-width=""  data-layout="button_count" data-action="like" data-size="small" data-share="true">
         </div>
      </div>
      <div class="row">
         <div class="col-xs-12 col-sm-6 col-md-6">
         <div class="fb-comments" data-href="https://dev-deped-dauin.pantheonsite.io{{url}}"  data-width="" data-numposts="10"></div>
        </div>
    </div>
    </div>
  </section>
</article>
